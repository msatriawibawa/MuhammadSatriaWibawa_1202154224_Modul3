<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context="com.example.msatriawibawa.muhammadsatriawibawa_1202154224_modul3.DetailActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="@string/Lorem"/>

    <ImageView
        android:id="@+id/level"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/lorem"
        android:src="@drawable/image"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/btnPlus"
        android:src="@drawable/ic_add"
        android:layout_below="@id/level"
        android:layout_toEndOf="@+id/level"
        android:layout_toRightOf="@id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Addlevel"/>

    <TextView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@id/level"
        android:layout_centerHorizontal="true"
        android:text="1L" />

    <ImageView
        android:id="@+id/btnMinus"
        android:src="@drawable/ic_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/level"
        android:layout_toLeftOf="@id/level"
        android:onClick="Decreaselevel"/>
</RelativeLayout>

</ScrollView>